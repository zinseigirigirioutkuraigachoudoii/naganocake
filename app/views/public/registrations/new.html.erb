<div class= "container mt-5">
  <div class="col-md-12 mt-5">
    <div class="row">
      <div class="mx-auto">
        
        <h4 class="mt-2 mb-4 mx-auto headline">新規会員登録</h4>
        
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "layouts/error_messages", model: @customer %>
  
          <div class="form-group ml-2">
            <table class="table mb-0 table-borderless">
              <tbody>
                <tr>
                  <td>名前</td>
                  <td>（姓）</td>
                  <td><%= f.text_field :last_name,placeholder: "令和",class: 'form-control' %>
                  <td>（名）</td>
                  <td><%= f.text_field :first_name,placeholder: "道子",class: 'form-control' %></td>
                </tr>
                <tr>
                  <td>フリガナ</td>
                  <td>（セイ）</td>
                  <td><%= f.text_field :last_name_kana ,placeholder: "レイワ",class: 'form-control' %>
                  <td>(メイ)</td>
                  <td><%= f.text_field :first_name_kana,placeholder: "ミチコ",class: 'form-control' %></td>
                </tr>
                <tr>
                  <td>メールアドレス</td>
                  <td></td>
                  <td> <%= f.email_field :email,placeholder: "sample@example.com",class: 'form-control' %> </td>
                </tr>
                <tr>
                  <td>郵便番号（ハイフンなし）</td>
                  <td></td>
                  <td><%= f.text_field :postcode ,placeholder: "0000000",class: 'form-control' %></td>
                </tr>
                <tr>
                  <td>住所</td>
                  <td></td>
                  <td colspan="3"><%= f.text_field :address ,placeholder: "東京都渋谷区代々木神園町0-0",class: 'form-control' %></td>
                </tr>
                <tr>
                  <td>電話番号（ハイフンなし）</td>
                  <td></td>
                  <td><%= f.text_field :phone_number ,placeholder: "00000000000",class: 'form-control' %></td>
                </tr>
                <tr>
                  <td>パスワード（６文字以上)</td>
                  <td></td>
                  <td><%= f.password_field :password, autocomplete: "new-password",class: 'form-control' %></td>
                </tr>
                <tr>
                  <td>パスワード（確認用）</td>
                  <td></td>
                  <td><%= f.password_field :password_confirmation, autocomplete: "new-password",class: 'form-control' %></td>
                </tr>
                <tr>
                  <td></td>
                  <td></td>
                  <td class="text-center"><%= f.submit "新規登録", :class => "btn btn-md btn-success" %></td>
                </tr>
              </tbody>
            </table>
        </div>
        <div class="mt-4">
          <h4>既に登録済みの方</h4>
          <h6><%= link_to "こちら", new_session_path(resource_name), class:"login-link" %>からログインしてください。</h6>
        </div>
      </div>
        <% end %>
    </div>
  </div>
</div>