<div class="container mt-5">
  <div class="row">
    <div class="col-md-8">
      <h4 class="col-md-4 headline mb-4">会員情報編集</h4>
      <%= form_with model: @customer, url:customers_information_path do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>

      <div class="form-group row mt-3">
        <label class="col-md-3 col-form-label">氏名</label>
        <div class="col-md-3">
          <%= f.text_field :last_name , class:"form-control" %>
        </div>
        <div class="col-md-3">
          <%= f.text_field :first_name, class:"form-control" %>
        </div>
      </div>
  
      <div class="form-group row mt-3" >
        <label class="col-md-3 col-form-label">フリガナ</label>
        <div class="col-md-3">
          <%= f.text_field :last_name_kana , class:"form-control" %>
        </div>
        <div class="col-md-3">
          <%= f.text_field :first_name_kana , class:"form-control" %>
        </div>
      </div>
  
      <div class="form-group mt-3 row">
        <label class="col-md-3 col-form-label">郵便番号</label>
        <div class="col-md-6">
          <%= f.text_field :postcode, class:"form-control"  %>
        </div>
      </div>
  
      <div class="form-group mt-3 row">
        <label class="col-md-3 col-form-label">住所</label>
        <div class="col-md-6">
          <%= f.text_field :address , class:" form-control" %>
        </div>
      </div>
  
      <div class="form-group mt-3 row">
        <label class="col-md-3 col-form-label">電話番号</label>
        <div class="col-md-6">
          <%= f.text_field :phone_number, class:" form-control" %>
        </div>
      </div>
  
      <div class="form-group mt-3 row">
        <label class="col-md-3 col-form-label">メールアドレス</label>
        <div class="col-md-6">
          <%= f.text_field :email, class:" form-control" %>
        </div>
      </div>
      <div class="col-md-6 d-flex justify-content-between m-auto mt-2 mb-2">
        <div class="form-group mt-3">
          <%= f.submit '編集内容を保存', class: 'btn btn-md btn-success' %>
        </div>
        <% end %>
        <div class="align-items-center mt-3">
          <%= link_to "退会する", customers_unsubscribe_path, class: 'btn btn-md btn-danger ' %>
        </div>
      </div>
    </div>
  </div>
</div>