<div class= 'container mt-5'>
  <div class='row'>
    <div class="col-md-8 mx-auto">

      <h4 class="mx-auto headline mt-2 mb-4">管理者ログイン</h4>

    <%= form_for(resource, as: resource_name, url: admin_session_path) do |f| %>
      <div class="form-group row mt-4 justify-content-center">
        <%= f.label :メールアドレス,class:"col-md-3 col-form-label" %>
        <div class="col-7">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
        </div>
      </div>
    
      <div class="form-group row mt-4 justify-content-center">
        <%= f.label :パスワード ,class:"col-md-3 col-form-label" %>
        <div class="col-7">
        <%= f.password_field :password, autocomplete: "current-password",class:"form-control" %>
        </div>
      </div>
      <div class="d-flex justify-content-center mt-3">
        <%= f.submit "ログイン" ,class: "btn btn-sm btn-primary mt-3 w-25" %>
      </div>
    <% end %>

    <%= render "admin/shared/links" %>
    </div>
  </div>
</div>
