<div class="container">
  <div class="col-md-12 mx-auto mt-5">

    <div class="row justify-content-center mb-5">
      <div class="col-md-9 headline">
        <h4>商品詳細</h4>
      </div>
    </div>

    <div class="d-flex justify-content-center">

    <div class="col-md-4 d-flex text-center justify-content-center align-items-center">
    <%= image_tag @item.get_image(200,200) %>
    </div>
    <div class="col-md-8 d-flex justify-content-center mr-5" >
    <table class="table table-borderless">
      <thead>
        <tr>
          <th scope="col" style="width: 25%"></th>
          <th scope="col" style="width: 75%"></th>
        </tr>
      </thead>
      <tbody>
      <tr>
        <td>商品名</td>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= @item.description %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= @item.genre.name %></td>
      </tr>
         <td> 税込価格 </br>
             (税抜価格)
         </td>
         <td valign="middle">
             <%= @item.with_tax_price.to_s(:delimited) %>
             (<%= @item.price.to_s(:delimited)%>)円
         </td>
      <tr>
         <td>販売ステータス</td>
         <td><% if @item.is_active == true %>
            <strong style="color:green;"><%= "販売中" %></strong>
            <% else %>
            <span style="color:red;"><%= "停止中" %></span>
            <% end %>
        </td>
      </tr>
     </tbody>
    </table>
    </div>


  </div>
   <div class=" mt-3 text-center">
      <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn w-25 mt-3 change_button btn-success" %>
      </div>
  </div>
</div>