 <%= render"layouts/error_messages", model: @genre %>
<div class= 'container mt-5'>
  <div class="col-md-10 mx-auto">

    <div class="row justify-content-center mb-5">
      <div class="col-md-4 headline">
        <h4>ジャンル一覧・追加</h4>
      </div>
    </div>

  <%= form_with model:@genre, url:admin_genres_path, method: :post do |f| %>
 <div class="row mt-3">

  <div class="col-md-2 text-center">
   <%= f.label :name, "ジャンル名" %>
  </div>

  <div class="col-md-3">
   <%= f.text_field :name ,placeholder:"ジャンル名", class: "form-control"%>
  </div>

  <div class="col-md-1">
   <%= f.submit "新規登録", class:"btn btn-success" %>
  </div>
  <% end %>

   <div class="col-md-12 mt-5">
    <table class="table table-bordered border-dark table-hover align-middle custom-table">
      <thead class>
        <tr align="center">
        <th colspan="2">ジャンル</th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre|%>
        <tr>
        <td valign="middle"><%= genre.name%></td>
        <td align="center"><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-sm btn-success" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  </div>

    </div>
  </div>
</div>